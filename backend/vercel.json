{
    "version": 2,
    "builds": [
        { "src": "server.js", 
        "use": "@vercel/node" }
    ],
    "routes": [
        { 
            "src": "/(.*)", 
            "dest": "server.js" 
        }
    ],
    "headers": [
        {
          "source": "/(.*)",
          "headers": [
            { "key": "Access-Control-Allow-Origin", "value": "https://your-frontend-domain.com" },
            { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PATCH, DELETE, PUT" },
            { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
          ]
        }
    ]
    
}